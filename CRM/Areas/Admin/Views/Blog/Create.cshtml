@model Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data" style="margin-left: 15px;">
            <h2>Create</h2>
            <div class="form-group">
                @Html.LabelFor(s => s.Title)
                @Html.TextBoxFor(s => s.Title, new { @class = "form-control", type = "text", placeholder = "Title_En" })
                @Html.ValidationMessageFor(s => s.Title, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Title_Az)
                @Html.TextBoxFor(s => s.Title_Az, new { @class = "form-control", type = "text", placeholder = "Title_Az" })
                @Html.ValidationMessageFor(s => s.Title_Az, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Title_Ru)
                @Html.TextBoxFor(s => s.Title_Ru, new { @class = "form-control", type = "text", placeholder = "Title_Ru" })
                @Html.ValidationMessageFor(s => s.Title_Ru, null, new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(s => s.Description)
                @Html.TextBoxFor(s => s.Description, new { @class = "form-control", type = "text", placeholder = "Description_En" })
                @Html.ValidationMessageFor(s => s.Description, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Description_Az)
                @Html.TextBoxFor(s => s.Description_Az, new { @class = "form-control", type = "text", placeholder = "Description_Az" })
                @Html.ValidationMessageFor(s => s.Description_Az, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Description_Ru)
                @Html.TextBoxFor(s => s.Description_Ru, new { @class = "form-control", type = "text", placeholder = "Description_Ru" })
                @Html.ValidationMessageFor(s => s.Description_Ru, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Photo)
                @Html.TextBoxFor(s => s.Photo, new { @class = "form-control", type = "file", accept = "image/*" })
                @Html.ValidationMessageFor(s => s.Photo, null, new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-outline-success" value="Create" />
        </form>

    </div>
</div>
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

