@model About
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data" style="margin-left: 15px;">
            <h2>Delete</h2>
            <div class="alert alert-danger" role="alert">
                Bu postu silmək istədiyinizə əminsiziniz??
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.Description)
                @Html.TextBoxFor(s => s.Description, new { @class = "form-control", type = "text", placeholder = "Description_En" })
                @Html.ValidationMessageFor(s => s.Description, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Description_Az)
                @Html.TextBoxFor(s => s.Description_Az, new { @class = "form-control", type = "text", placeholder = "Description_Az" })
                @Html.ValidationMessageFor(s => s.Description_Az, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(s => s.Description_Ru)
                @Html.TextBoxFor(s => s.Description_Ru, new { @class = "form-control", type = "text", placeholder = "Description_Ru" })
                @Html.ValidationMessageFor(s => s.Description_Ru, null, new { @class = "text-danger" })
            </div>

            <input type="submit" class="btn btn-outline-success" value="Delete" />
        </form>
    </div>
</div>

