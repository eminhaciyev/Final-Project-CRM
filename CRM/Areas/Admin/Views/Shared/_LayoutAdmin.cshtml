<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin - Dashboard</title>   
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <!-- Custom fonts for this template-->
    <link href="~/Adminfiles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/Adminfiles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Adminfiles/css/sb-admin.css" rel="stylesheet">


</head>
<body id="page-top" style="background:rgb(211, 222, 255);">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" href="index.html">Admin Panel</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search -->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group" style="display:none;">
                <input type="text" class="form-control" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Navbar start -->

        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow mx-1">

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="alertsDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item dropdown no-arrow mx-1">
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="messagesDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" style="font-size: 30px" ; id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" data-toggle="modal" data-target="#logoutModal">Logout</a>
                </div>
            </li>
        </ul>

        <!-- Navbar end -->
    </nav>

    <div id="wrapper">
        <!-- Sidebar start-->

        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="index.html">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Pages</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">Database CRUDs:</h6>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Slider" asp-action="Index">Slider</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="About" asp-action="Index">About</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Blog" asp-action="Index">Blogs</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Testimonials" asp-action="Index">Testimonials</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="WhyChooseUs" asp-action="Index">Why Choose Us</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="Index">Complaints</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="CV_Index">CV</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Contact" asp-action="Index">Contacts</a>

                    <div class="dropdown-divider"></div>
                </div>
            </li>
        </ul>

        <!-- Sidebar end-->

        @RenderBody()
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal start-->

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Çıxış etmək istəyirsiniz?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Admin Paneldən çıxış etmək istəyirsizsə "LogOut" düyməsinə clicklərin!</div>
                <div class="modal-footer">
                    <form method="post" asp-area="Admin" asp-controller="Admin" asp-action="LogOut">
                        <input type="submit" class="btn btn-primary" value="Logout" />

                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout Modal end-->

    <!-- Bootstrap core JavaScript-->
    <script src="~/Adminfiles/vendor/jquery/jquery.min.js"></script>
    <script src="~/Adminfiles/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Adminfiles/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/Adminfiles/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Adminfiles/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Adminfiles/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Adminfiles/js/sb-admin.min.js"></script>
    <!-- Demo scripts for this page-->
    <script src="~/Adminfiles/js/demo/datatables-demo.js"></script>

    @RenderSection("scripts", required: false);
</body>
</html>
