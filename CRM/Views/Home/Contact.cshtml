            top: 50%;
            position: absolute;
         }

    </style>

    <script>
        $(document).ready(function () {

            $(".textarea-size").html("")

            $(".overlay-service").css({
                "display":"@el"
            })


            $(".overlay-service").click(function () {
                $(".overlay-service").css({
                         "display": "none"
                })
                $(".sval").css({
                         "display": "none"
                })
            })

            $(".exit_swal").click(function () {
                $(".overlay-service").css({
                    "display": "none"
                })
                $(".sval").css({
                    "display": "none"
                })
            })
        })
    </script>
}
