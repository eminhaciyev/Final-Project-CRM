@* Contact section start *@
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-8 col-lg-8">
                <div class="contact-form">
                    <form method="post" asp-controller="Home" asp-action="Contact">
                        <div class="input-group">
                            <label asp-for="@(Model.Contacts.Fullname)" class="input-labels">@Localizer["fullname"]</label>
                            <input type="text" asp-for="@(Model.Contacts.Fullname)" placeholder="@Localizer["fullname"]" class="input-size" name="fullname" value="" />
                            <span asp-validation-for="@(Model.Contacts.Fullname)" class="text-danger"></span>

                        </div>
                        <div class="input-group">
                            <label asp-for="@(Model.Contacts.EmailOrNumber)" class="input-labels">@Localizer["email"]</label>
                            <input type="email" asp-for="@(Model.Contacts.EmailOrNumber)" placeholder="@Localizer["email"]" class="input-size" name="email" value="" />
                            <span asp-validation-for="@(Model.Contacts.EmailOrNumber)" class="text-danger"></span>
                        </div>
                        <div class="input-group">
                            <label asp-for="@(Model.Contacts.Subject)" class="input-labels">@Localizer["subject"]</label>
                            <input type="text" asp-for="@(Model.Contacts.Subject)" placeholder="@Localizer["entersubject"]" class="input-size" name="subject" value="" />
                            <span asp-validation-for="@(Model.Contacts.Subject)" class="text-danger"></span>
                        </div>
                        <div class="input-group">
                            <label asp-for="@(Model.Contacts.Message)" class="input-labels">@Localizer["message"]</label>
                            <textarea type="text" asp-for="@(Model.Contacts.Message)" cols="30" rows="10" placeholder="@Localizer["writesomethingus"]"
                                      class="textarea-size" name="message"></textarea>
                        </div>
                        <span asp-validation-for="@(Model.Contacts.Message)" class="text-danger"></span>

                        <button type="submit" class="send">@Localizer["send"]</button>
                    </form>
                </div>
            </div>

            <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                <div class="contact-info" style="margin-top: 42px;">
                    <h4 class="contact-header">@Localizer["contactinfo"]</h4>
                    <h5 class="address">@Localizer["address"]</h5>
                    <p class="location-avenue"> Nizami küç. 203B, AF Business House, 2-ci mərtəbə</p>
                    <h5 class="phone-header">@Localizer["phone"]</h5>
                    <p class="phone-number">+994 51 300 77 99</p>
                    <p class="phone-number">+994 55 379 54 33</p>
                    <h5>@Localizer["email"]</h5>
                    <p class="contact-email">eminah@code.edu.az</p>
                    <p class="contact-email">huseyinekh@code.edu.az</p>
                </div>
            </div>
        </div>
    </div>
</section>
@* Contact section end *@

